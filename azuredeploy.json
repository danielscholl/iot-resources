{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "defaultValue": "eastus"
    },
    "group": {
      "type": "string",
      "metadata": {
        "description": "Solution Name"
      },
      "defaultValue": "iot-x509-testing"
    },
    "templateURL": {
      "type": "string",
      "metadata": {
        "description": "URL Location on where to find the templates"
      },
      "defaultValue": "https://raw.githubusercontent.com/danielscholl/iot-x509-testing/master/templates/"
    },
    "userObjectId": {
      "type": "string",
      "metadata": {
        "description": "ObjectId of current logged in user."
      }
    },
    "adminUserName": {
      "type": "string",
      "metadata": {
        "description": "Linux servers admin user account name."
      },
      "defaultValue": "azureuser",
      "minLength": 1
    },
    "sshKeyData": {
      "type": "string",
      "metadata": {
        "description": "SSH rsa public key file as a string."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('location')]",
      "name": "[parameters('group')]",
      "properties": {}
    },
    {
      "name": "TemplateKeyVault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[parameters('group')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', parameters('group'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployKeyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "userObjectId": {
            "value": "[parameters('userObjectId')]"
          }
        }
      }
    },
    {
      "name": "TemplateLogAnalytics",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[parameters('group')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', parameters('group'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployLogAnalytics.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {}
      }
    },
    {
      "name": "TemplateIotResources",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[parameters('group')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', parameters('group'))]",
        "TemplateLogAnalytics"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployIotResources.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {}
      }
    },
    {
      "name": "TemplateEdge",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[parameters('group')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', parameters('group'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateURL'), 'deployEdge.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUserName": {
            "value": "[parameters('adminUserName')]"
          },
          "sshKeyData": {
            "value": "[parameters('sshKeyData')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
